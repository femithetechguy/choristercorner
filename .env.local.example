# Firebase Configuration (Optional)
# Get these from your Firebase Console > Project Settings
# NEXT_PUBLIC_FIREBASE_API_KEY=
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
# NEXT_PUBLIC_FIREBASE_APP_ID=

# Email Service Configuration (Hostinger SMTP)
# Get these values from your Hostinger email account settings
# SMTP Server address
EMAIL_HOST=mail.fttgsolutions.com

# SMTP Port (use 465 for SSL or 587 for TLS)
EMAIL_PORT=465

# Email address (your dev email)
EMAIL_USER=dev@fttgsolutions.com

# Email password (from Hostinger - use app-specific password if 2FA enabled)
EMAIL_PASSWORD=your_hostinger_email_password_here

# Secure connection (set to false only for port 587, true for 465)
EMAIL_SECURE=true
